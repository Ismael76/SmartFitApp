<Friendscreen>:
    FloatLayout:
        AnchorLayout: #For 'settings' & 'menu' icons
            rows: 1
            anchor_x: 'center'
            anchor_y: 'top'
            orientation: 'vertical'

            MDToolbar:
                title: 'SmartFit'
                left_action_items: [["menu", lambda x: app.nav_drawer()]]

                elevation: 8

            MDBottomAppBar:
                MDToolbar:
                    left_action_items: [["magnify", lambda x: app.change_screen("food_search_screen")], ["run", lambda x: app.change_screen("log_screen")]]
                    right_action_items: [["account-group", lambda x: app.change_screen("social_screen")], ["account", lambda x: app.change_screen("profile_screen")] ]
                    type: 'bottom'
                    icon: 'home'
                    on_action_button: app.change_screen("home_screen")

        Image:
            size_hint: 1, .08
            pos_hint:{"top": .9, "right": .7}
            id: friend_avatar
            source:

        Label:
            pos_hint: {"top": .85, "right": .7}
            size_hint: 1, .1
            id: friend_id_num
            text: ""
            color: 0, 0, 0, 1
            font_name: "Alphakind"

        Label:
            pos_hint: {"top": .9, "right": 1}
            size_hint: 1, .1
            id: friend_level
            text: ""
            color: 0, 0, 0, 1
            font_name: "Alphakind"

        Label:
            pos_hint: {"top": .85, "right": 1}
            size_hint: 1, .1
            id: friend_name
            text: ""
            color: 0, 0, 0, 1
            font_name: "Alphakind"

        ScrollView:
            pos_hint: {"top": .77, "right": 1}
            size_hint: 1, .7
            GridLayout:
                id: friend_banner_grid
                cols: 1
                spacing: 10,10
                size_hint_y: None
                height: self.minimum_height
                row_default_height: '100dp'
                row_force_default: True

        MDLabel:
            pos_hint: {"top": .6, "right": 1}
            size_hint: .9, .1
            id: no_friend_activity_label
            text: "This user has no logged activities"
            color: 0, 0, 0, 1
            font_name: "Alphakind"