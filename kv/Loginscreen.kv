<Loginscreen>:
    FloatLayout:
        canvas:
            Color:
                rgb: utils.get_color_from_hex("#e3e3e3")
            Rectangle:
                size: self.size
                pos: self.pos
        GridLayout:
            rows: 1
            size_hint: 1, .25
            pos_hint:{"top": .9, "right": 1}
            Image:
                source: "icons/SmartFit.png"
                id: logo

        GridLayout:
            rows: 1
            size_hint_x: None
            width: '300dp'
            pos_hint:{"top": .55, "right": .88}
            MDTextField:
                color_mode: 'custom'
                hint_text: "Enter Email"
                icon_right: "account"
                font_name: "Alphakind"
                id: user_email
                mode: "rectangle"
                line_color_focus: 0, 0, 0, 1

        GridLayout:
            rows: 1
            size_hint_x: None
            width: '300dp'
            pos_hint:{"top": .47, "right": .88}
            MDTextField:
                color_mode: 'custom'
                hint_text: "Enter Password"
                password: True
                icon_right: "key-variant"
                font_name: "Alphakind"
                id: user_password
                mode: "rectangle"
                line_color_focus: 0, 0, 0, 1

        GridLayout:
            rows: 1
            size_hint_x: None
            width: '330dp'
            pos_hint:{"top": .35, "right": .9}
            MDFlatButton:
                increment_width: '290dp'
                text: "SIGN IN"
                md_bg_color: 1, 0, 0, 1
                font_name: "Alphakind"
                color: 1, 1, 1, 1
                on_release: app.authentication.login(user_email.text, user_password.text)

        GridLayout:
            rows: 1
            size_hint: .85, .1
            pos_hint:{"top": .3, "right": 1}
            MDLabel:
                font_name: "Alphakind"
                text: "Don't already have an account?"
                color: 0, 0, 0, 1

        GridLayout:
            rows: 1
            size_hint_x: None
            width: '330dp'
            pos_hint:{"top": .2, "right": .9}
            MDFlatButton:
                increment_width: '290dp'
                text: "SIGN UP"
                md_bg_color: 1, 0, 0, 1
                font_name: "Alphakind"
                on_release: app.change_screen("register_screen")

        GridLayout:
            rows: 1
            size_hint: .55, .1
            pos_hint:{"top": .1, "right": .9}
            MDLabel:
                id: error_label
                text: ""
                color: 1, 0, 0, 1
                font_name: "Alphakind"