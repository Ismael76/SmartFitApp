<Registerscreen>:
    FloatLayout:
        canvas:
            Color:
                rgb: utils.get_color_from_hex("#e3e3e3")
            Rectangle:
                size: self.size
                pos: self.pos

        GridLayout:
            rows: 1
            size_hint: 1, .1
            pos_hint:{"top": .95, "right": 1}
            Image:
                source: "icons/SmartFit.png"
                id: logo

        GridLayout:
            rows: 1
            size_hint_x: None
            width: '300dp'
            pos_hint:{"top": .8, "right": .88}
            MDTextField:
                color_mode: 'custom'
                id: register_email
                hint_text: "Enter Email"
                icon_right: "email"
                font_name: "Alphakind"
                line_color_focus: 0, 0, 0, 1
                mode: "rectangle"

        GridLayout:
            rows: 1
            size_hint_x: None
            width: '300dp'
            pos_hint:{"top": .7, "right": .88}
            MDTextField:
                color_mode: 'custom'
                id: register_password
                hint_text: "Enter Password"
                icon_right: "key-variant"
                font_name: "Alphakind"
                line_color_focus: 0, 0, 0, 1
                mode: "rectangle"

        GridLayout:
            rows: 1
            size_hint_x: None
            width: '300dp'
            pos_hint:{"top": .6, "right": .88}
            MDTextField:
                color_mode: 'custom'
                id: register_name
                hint_text: "Enter Name"
                icon_right: "account"
                font_name: "Alphakind"
                line_color_focus: 0, 0, 0, 1
                mode: "rectangle"

        GridLayout:
            rows: 1
            size_hint_x: None
            width: '300dp'
            pos_hint:{"top": .5, "right": .88}
            MDTextField:
                color_mode: 'custom'
                id: register_weight
                hint_text: "Enter Weight (KG)"
                input_filter: 'float'
                icon_right: "weight-kilogram"
                font_name: "Alphakind"
                line_color_focus: 0, 0, 0, 1
                mode: "rectangle"

        GridLayout:
            rows: 1
            size_hint_x: None
            width: '300dp'
            pos_hint:{"top": .4, "right": .88}
            MDTextField:
                color_mode: 'custom'
                id: register_height
                hint_text: "Enter Height (CM)"
                input_filter: 'float'
                icon_right: "human-male-height"
                font_name: "Alphakind"
                line_color_focus: 0, 0, 0, 1
                mode: "rectangle"

        GridLayout:
            rows: 1
            size_hint: .75, .1
            width: '200dp'
            pos_hint:{"top": .15, "right": 1}
            MDLabel:
                id: error_label
                text: ""
                color: 1, 0, 0, 1
                font_name: "Alphakind"

        GridLayout:
            rows: 1
            size_hint: .2, .1
            pos_hint: {"top": .3, "right": .3}
            MDCheckbox:
                group: "gender"
                size_hint: 1, .1
                id: gender_male
                color: 0, 0, 0, 1

            Label:
                size_hint: 1, .1
                pos_hint: {"top": .3, "right": 1}
                font_name: "Alphakind"
                color: 0, 0, 0, 1
                text: "Male"

        GridLayout:
            rows: 1
            size_hint: .2, .1
            pos_hint: {"top": .3, "right": .5}
            MDCheckbox:
                group: "gender"
                size_hint: 1, .1
                pos_hint: {"top": .3, "right": 1}
                id: gender_female
                color: 0, 0, 0, 1

            Label:
                size_hint: 1, .1
                pos_hint: {"top": .3, "right": 1}
                font_name: "Alphakind"
                color: 0, 0, 0, 1
                text: "Female"

        GridLayout:
            rows: 1
            size_hint_x: None
            width: '340dp'
            pos_hint:{"top": .2, "right": .9}
            MDFlatButton:
                increment_width: '250dp'
                text: "CREATE ACCOUNT"
                md_bg_color: 1, 0, 0, 1
                font_name: "Alphakind"
                on_release:
                    app.authentication.register(register_email.text, register_password.text, register_name.text, register_weight.text, register_height.text)
