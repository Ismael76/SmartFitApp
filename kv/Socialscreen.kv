<Socialscreen>:
    FloatLayout:
        AnchorLayout: #For 'settings' & 'menu' icons
            rows: 1
            anchor_x: 'center'
            anchor_y: 'top'
            orientation: 'vertical'

            MDToolbar:
                title: 'SmartFit'
                left_action_items: [["menu", lambda x: app.nav_drawer()]]
                elevation: 8

            MDBottomAppBar:
                MDToolbar:
                    left_action_items: [["magnify", lambda x: app.change_screen("food_search_screen")], ["weight-lifter", lambda x: app.change_screen("log_screen")]]
                    right_action_items: [["account-group", lambda x: app.change_screen("social_screen")], ["account", lambda x: app.change_screen("profile_screen")] ]
                    type: 'bottom'
                    icon: 'home'
                    on_action_button: app.change_screen("home_screen")


        ScrollView:
            pos_hint: {"top": .88, "right": 1}
            size_hint: 1, .7
            GridLayout:
                id: friends_list_grid
                cols: 1
                spacing: 10,10
                size_hint_y: None
                height: self.minimum_height
                row_default_height: '100dp'
                row_force_default: True

        MDLabel:
            pos_hint: {"top": .6, "right": 1}
            size_hint: .95, .1
            id: no_friend_label
            text: "You currently do not have any friends"
            color: 0, 0, 0, 1
            font_name: "Alphakind"
