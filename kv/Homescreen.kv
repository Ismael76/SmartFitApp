            font_size: '30dp'
            color: 0,0,0

        GridLayout:
            canvas:
                Color:
                    rgb: utils.get_color_from_hex("#00FF22")
                Rectangle:
                    size: self.size
                    pos: self.pos
            pos_hint: {"top": .33, "right": 1}
