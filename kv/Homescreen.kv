#:import utils kivy.utils

<Homescreen>:
    FloatLayout:
        #Icons for 'Menu' & 'Settings'
        FloatLayout: #For 'settings' & 'menu' icons
            canvas:
                Color:
                    rgb: utils.get_color_from_hex("#FDEA9F")
                Rectangle: #Rectangle will get the colour of the 'rgb' above
                    size: self.size
                    pos: self.pos
            rows: 1
            pos_hint: {"top": 1}
            size_hint: 1, .1
            Image:
                source: "icons/menu.png"
                size_hint: 0.2, 0.5
                pos_hint: {"top": 0.8}
            Image:
                source: "icons/SmartFit.png"
                size_hint: 0.2, .9
                pos_hint: {"top": 1, "x": 0.5}

        #Avatar/User
        GridLayout: #For 'avatar'
            rows: 1
            pos_hint: {"top": .9, "left": 1}
            size_hint: 1, .2
            Image:
                source: "icons/002-man.png"
        Label:
            pos_hint: {"top": .7, "left": 1}
            size_hint: 1, .1
            text: "MUHAMMED ALI"
            id: name_label
            color: 0,0,0



