<Profilescreen>:
    FloatLayout:
        AnchorLayout: #For 'settings' & 'menu' icons
            rows: 1
            anchor_x: 'center'
            anchor_y: 'top'
            orientation: 'vertical'

            MDToolbar:
                title: 'SmartFit'
                left_action_items: [["menu", lambda x: app.nav_drawer()]]
                elevation: 8

            MDBottomAppBar:
                MDToolbar:
                    left_action_items: [["magnify", lambda x: app.change_screen("food_search_screen")], ["yoga", lambda x: app.change_screen("log_screen")]]
                    right_action_items: [["account-group", lambda x: app.change_screen("social_screen")], ["account", lambda x: app.change_screen("profile_screen")] ]
                    type: 'bottom'
                    icon: 'home'
                    on_action_button: app.change_screen("home_screen")

        Label:
            id: user_id_label
            size_hint: .6, .1
            pos_hint:{"top": .9, "right": 1}
            color: 0, 0, 0, 1
            text: "User ID: "
            font_name: "Alphakind"

        Label:
            id: level_label
            size_hint: .6, .1
            pos_hint:{"top": .84, "right": 1}
            color: 0, 0, 0, 1
            text: ""
            font_name: "Alphakind"

        Label:
            id: name_label
            size_hint: .6, .1
            spacing: 50, 50
            pos_hint:{"top": .77, "right": 1}
            color: 0, 0, 0, 1
            text: ""
            font_name: "Alphakind"

        Image:
            pos_hint:{"top": .87, "right": .8}
            size_hint: 1, .2
            source: "icons/avatars/002-man.png"
            id: avatar_image

        ImageButton:
            size_hint: 1, .07
            pos_hint: {"top": .6, "right": .8}
            source: "icons/avatars/002-man.png"
            on_release:
                print("Change Avatar")

        ImageButton:
            size_hint: 1, .07
            pos_hint: {"top": .5, "right": .8}
            source: "icons/medal.png"
            on_release:
                app.change_screen("badge_screen")

        ImageButton:
            size_hint: 1, .07
            pos_hint: {"top": .4, "right": .8}
            source: "icons/follow.png"
            on_release:
                app.change_screen("add_user_screen")

        LabelButton:
            size_hint: .9, .07
            pos_hint: {"top": .6, "right": 1}
            text: "Update Avatar"
            color: 0, 0, 0, 1
            font_name: "Alphakind"
            on_release:
                app.change_screen("change_avatar_screen")

        LabelButton:
            size_hint: .9, .07
            pos_hint: {"top": .5, "right": 1}
            text: "View Badges"
            color: 0, 0, 0, 1
            font_name: "Alphakind"
            on_release: app.change_screen("badge_screen")

        LabelButton:
            size_hint: .9, .07
            pos_hint: {"top": .4, "right": 1}
            text: "Add Friend"
            color: 0, 0, 0, 1
            font_name: "Alphakind"
            on_release:
                app.change_screen("add_user_screen")